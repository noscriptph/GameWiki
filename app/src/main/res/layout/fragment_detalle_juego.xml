<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragmentos.DetalleJuego">

    <ImageView
        android:id="@+id/id_star2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/dos_estrellas"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toEndOf="@+id/id_star1"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/id_image_caratula"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/imagen_del_juego"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/id_game_title"
        style="@style/Titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/txt_nombre_del_juego"
        app:layout_constraintStart_toEndOf="@+id/id_image_caratula"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/anio_de_lanzamiento"
        app:layout_constraintStart_toEndOf="@+id/id_image_caratula"
        app:layout_constraintTop_toBottomOf="@+id/id_game_title"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/id_anio"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/anio"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/id_game_title"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView10"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/categoria"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/id_categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/categoria"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/id_anio"
        app:layout_constraintTop_toBottomOf="@+id/id_anio"
        tools:ignore="SmallSp,TextContrastCheck" />

    <TextView
        android:id="@+id/desarrollador"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/desarrollador"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView15"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/desarrollador"
        app:layout_constraintStart_toStartOf="@+id/id_categoria"
        app:layout_constraintTop_toBottomOf="@+id/id_categoria"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView14"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/puntuacion"
        android:text="@string/puntuacion"
        app:layout_constraintStart_toStartOf="@+id/desarrollador"
        app:layout_constraintTop_toBottomOf="@+id/desarrollador"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/id_star1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/una_estrella"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/tres_estrellas"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toEndOf="@+id/id_star2"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/cuatro_estrellas"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/cinco_estrellas"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/compatir_a_travez_de_otras_apps"
        android:src="@android:drawable/ic_menu_share"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView16"
        style="@style/Subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/compartir"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/compartir_caratula"
        android:src="?android:attr/galleryItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-5dp"
        android:src="@android:drawable/ic_menu_share"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/descripcion"
        app:layout_constraintStart_toStartOf="@+id/id_image_caratula"
        app:layout_constraintTop_toBottomOf="@+id/id_image_caratula"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/id_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/contenido_de_la_descripcion"
        app:layout_constraintStart_toStartOf="@+id/txt_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
        tools:ignore="TextContrastCheck" />

    <View
        android:id="@+id/separador1"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_descripcion" />

    <TextView
        android:id="@+id/txt_galeria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/galeria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separador1"
        tools:ignore="TextContrastCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_galeria"
        tools:ignore="SpeakableTextPresentCheck"
        tools:listitem="@layout/imagen_reciclable" />


</androidx.constraintlayout.widget.ConstraintLayout>